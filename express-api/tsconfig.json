{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "paths": {
    "@/*": ["./src/*"],
    "@types": ["./types/*"],
    "~/*": ["./*"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}